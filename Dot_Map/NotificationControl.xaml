<UserControl
    x:Class="Dot_Map.NotificationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dot_Map"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid Margin="10" Padding="10" HorizontalAlignment="Right" x:Name="BoxNotification" CornerRadius="10">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="titleTextBlock" Foreground="#fff" FontWeight="Bold" FontSize="16"/>
                <TextBlock x:Name="contentTextBlock" Foreground="#fff" Margin="0,5,0,0"/>
                <Button x:Name="Close" Foreground="#fff" Content="Скрыть" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Right" VerticalAlignment="Top" Background="#085e17"></Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
